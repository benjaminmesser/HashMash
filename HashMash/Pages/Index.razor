@page "/"
@using System.Security.Cryptography
@using System.Text
@using System.IO

@inject Blazored.SessionStorage.ISyncSessionStorageService sessionStorage


<div class="container text-center">

    <h2>HashMash</h2>

    @if (!dismissed)
    {
        // Lets consider making this an actual modal popup, with something like the alert but also a quick explanation of the Masher and how to use it with some examples maybe
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Welcome!</strong> Before playing with the Masher remember that it is for educational purposes only and follow safe internet practices. Never input your actual passwords into unknown sites... including this one.
            <button type="button" @onclick="@(e => sessionStorage.SetItem<bool>("dismissed", true))" class="btn-close" data-dismiss="alert" aria-label="Close"></button>
        </div>
    }



    <Masher></Masher>

</div>



@code {

    // Flag to show the alert or not - default is false (show alert)
    bool dismissed => true ? sessionStorage.GetItem<bool>("dismissed") : false;

}